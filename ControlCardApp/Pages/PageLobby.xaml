<Page x:Class="ControlCardApp.Pages.PageLobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ControlCardApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1080"
      Title="PageLobby">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
            <StackPanel>
                <Button Width="350" Height="60" Content="Детали" Click="BtnDetails_Click"/>
                <Button Width="350" Height="60" Content="Шаблоны контрольных карт" Click="BtnTepmlates_Click"/>
                <Button Width="350" Height="60" Content="Разделы" Click="BtnSections_Click"/>
                <Button Width="350" Height="60" Content="Пункты" Click="BtnPoints_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
